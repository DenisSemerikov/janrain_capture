      // test 1.0 or 2.0
      $ver = variable_get('janrain_capture_ver', JANRAIN_CAPTURE_VERSION_DEFAULT);
      if($ver == JANRAIN_CAPTURE_VERSION_WIDGET) {
        
        $janrain_capture_ui = variable_get('janrain_capture_ui2', array());
